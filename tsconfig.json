{
  "compilerOptions": {
    "baseUrl": ".",
    "outDir": "build",
    "allowJs": true,
    "noImplicitAny": true,
    "strictNullChecks": true,
    "strictBindCallApply": true,
    "esModuleInterop": true,
    "importHelpers": true,
    "module": "commonjs",
    "target": "es2020",
    "skipLibCheck": true,
    "sourceMap": true,
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,
    "resolveJsonModule": true,
  },
  "include": [
    "src/server/**/*"
  ],
  "exclude": [
    "node_modules"
  ]
}

{
  "compilerOptions": {
    "baseUrl": ".",
    "outDir": "build",
    "allowJs": true,
    "noImplicitAny": true,
    "strictNullChecks": true,
    "strictBindCallApply": true,
    "esModuleInterop": true,
    "importHelpers": true,
    "module": "commonjs",
    "target": "es2020",
    "jsx": "react",
    "skipLibCheck": true,
    "sourceMap": true,
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,
    "resolveJsonModule": true,
    "paths": {
      "@constants": ["src/client/constants"],
      "@contexts": ["src/client/contexts"]
    },
  },
  "include": [
    "src/server/**/*",
    "src/client/**/*"
  ],
  "exclude": [
    "node_modules"
  ]
}


